<div id={{concat "step" @letter}} class={{concat "step step" @letter " karat " @classColor}}>
  <div class="step__label">{{@letter}}</div>
  {{@step.[0]}}<br />
  x {{@step.[1]}}
  <hr />
  {{@stepResult}}
{{#if @isDouble}} <BceButton @level={{level}} @letter="B" @calculate={{fn @calculate null @step 0 null}}></BceButton>{{/if}}
</div>
